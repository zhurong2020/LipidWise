/* pages/index/index.wxss */
.container {
  padding: 40rpx;
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.title {
  font-size: 64rpx;
  font-weight: bold;
  color: var(--brand-color);
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-primary {
  width: 80% !important;
  background-color: var(--brand-color);
  color: white;
  padding: 24rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 178, 106, 0.3);
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.disclaimer {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.disclaimer text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}
