/* pages/assessment/input.wxss */
.container {
    padding: 30rpx;
    background-color: #f6f6f6;
    padding-bottom: 60rpx;
}
  
.form-group {
    background-color: #fff;
    width: 100%;
    border-radius: 16rpx;
    padding: 0 30rpx;
    margin-bottom: 30rpx;
    box-sizing: border-box;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}
  
.section-title {
    font-size: 30rpx;
    font-weight: bold;
    color: var(--brand-color);
    padding: 30rpx 0 20rpx;
    border-bottom: 1rpx solid #eee;
}
  
.input-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.input-item:last-child {
    border-bottom: none;
}
  
.label {
    font-size: 30rpx;
    color: #333;
    flex: 1;
}

.input-item input {
    text-align: right;
    font-size: 30rpx;
    color: #333;
    width: 200rpx;
}

.radio-group {
    display: flex;
}

.radio {
    margin-left: 30rpx;
    font-size: 30rpx;
}

.switch-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.switch-item:last-child {
    border-bottom: none;
}

.label-box {
    display: flex;
    flex-direction: column;
}

.sub-label {
    font-size: 24rpx;
    color: #999;
    margin-top: 4rpx;
}

.btn-submit {
    margin-top: 40rpx;
    width: 90% !important;
    background-color: var(--brand-color);
    color: white;
    border-radius: 50rpx;
    font-size: 34rpx;
    padding: 20rpx 0;
}

.spacer {
    height: 60rpx;
}
